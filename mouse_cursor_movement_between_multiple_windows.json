{
  "title": "mouse cursor movement between multiple windows [left_option + number key]",
  "rules": [
    {
      "description": "move mouse cursor to 1st window [left_option + 1]",
      "manipulators": [
        {
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": [
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "50%",
                  "y": "50%",
                  "screen": 0
                }
              }
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "move mouse cursor to 2nd window [left_option + 2]",
      "manipulators": [
        {
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": [
            {
              "software_function": {
                "set_mouse_cursor_position": {
                  "x": "50%",
                  "y": "50%",
                  "screen": 1
                }
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
